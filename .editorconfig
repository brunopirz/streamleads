# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Docker Compose files
[docker-compose*.yml]
indent_size = 2

# Configuration files
[*.{ini,cfg,conf,toml}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Requirements files
[requirements*.txt]
indent_size = 2

# Environment files
[.env*]
indent_size = 2

# Git files
[.git*]
indent_size = 2

# GitHub workflows
[.github/workflows/*.yml]
indent_size = 2

# VS Code settings
[.vscode/*.json]
indent_size = 2

# Jupyter notebooks
[*.ipynb]
indent_size = 2

# Alembic files
[alembic.ini]
indent_size = 2

# Pytest configuration
[pytest.ini]
indent_size = 2

# Coverage configuration
[.coveragerc]
indent_size = 2

# Pre-commit configuration
[.pre-commit-config.yaml]
indent_size = 2

# Pylint configuration
[.pylintrc]
indent_size = 2